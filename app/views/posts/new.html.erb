<% provide(:title, 'New Post') %>

<%= form_for(:post, url: postcreate_path) do |p| %>
  <ul class="card-body text-capitalize">
    <%= p.label :title %>:
    <br>
    <%= p.text_field :title %>
    <br>
    <br>
    <%= p.label :body %>:
    <br>
    <%= p.text_area :body %>
    <br>
    <%= p.submit 'Send' %>
  </ul>
<% end %>

